<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<title>Micro Focus Support Performance Dashboard</title>
		<%= stylesheet_link_tag 'style' %>		
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag 'jscharts.js' %>	
	</head>
	<body>
		<div class="wrapper_main">
			<% if RAILS_ENV == 'development' %>
				<div class="dev_header"><p style="text-align:center; color:red; font-size:20pt;">THIS IS THE DEVELOPMENT SITE.  FOR THE PRODUCTION SITE, <%= link_to 'GO HERE', 'http://10.50.74.156' %></p></div>
			<% end %>
			<div class="top"><%= image_tag 'microfocus_header.JPG' %></div>
			<div class="top_nav_bar">
				<%= render :partial => 'layouts/navbar' %>
			</div>
			<div class="navbar">
				<% flash.each do |name, msg| %>
        			<%= content_tag :div, msg, :id => "flash_#{name}", :class=>"flash_#{name}" %>
      			<% end %>
				<div class="breadcrumbs"><%= crumbs %></div>				
			</div>
			<div class="content"><%= yield %></div>			
			
		</div>
		
		
		
	</body>
</html>
